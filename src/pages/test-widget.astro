"---\n// Auto-generated Chatwoot Widget Test Page\nimport HotelLayout from
'../layouts/HotelLayout.astro';\nimport { supabase } from '../lib/supabase';\n\n// Get all hotels
for testing\nconst { data: hotels } = await supabase\n .from('hotels')\n .select(`\n *,\n
chatwoot_accounts(account_id, website_token)\n `);\n---\n\n<HotelLayout title=\"Chatwoot Widget
Test\" domain=\"demo.localhost\">\n <main class=\"container mx-auto px-4 py-8\">\n <h1
class=\"text-4xl font-bold mb-8\">Chatwoot Widget Test</h1>\n \n <div class=\"grid gap-6\">\n
{hotels?.map(hotel => (\n <div class=\"card bg-base-100 shadow-xl\">\n <div class=\"card-body\">\n
<h2 class=\"card-title\">{hotel.name}</h2>\n <p><strong>Domain:</strong> {hotel.domain}</p>\n
<p><strong>Account ID:</strong> {hotel.chatwoot_accounts?.account_id}</p>\n <p><strong>Widget
Token:</strong> {hotel.chatwoot_accounts?.website_token}</p>\n <div class=\"card-actions\">\n <a
href={`/hotel/${hotel.domain}`} class=\"btn btn-primary\">\n Visit Hotel Page\n </a>\n </div>\n
</div>\n </div>\n ))}\n </div>\n \n <div class=\"mt-8 p-4 bg-info text-info-content rounded\">\n <h3
class=\"font-bold\">Testing Instructions:</h3>\n <ol class=\"list-decimal list-inside mt-2\">\n
<li>Click the chat widget in the bottom right</li>\n <li>Send a test message</li>\n <li>Check
Chatwoot dashboard for the message</li>\n <li>Verify it appears in the correct account</li>\n
</ol>\n </div>\n </main>\n</HotelLayout>"
