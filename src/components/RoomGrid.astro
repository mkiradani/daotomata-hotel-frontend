---
// Auto-generated Room Grid Component
const { rooms } = Astro.props;
---

<div class="gap-6 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
  {
    rooms.map(room => (
      <div class="bg-base-100 shadow-xl card">
        <div class="card-body">
          <h3 class="card-title">{room.name_es}</h3>
          <p>{room.description_es}</p>
          <div class="justify-between items-center card-actions">
            <span class="font-bold text-primary text-2xl">
              â‚¬{room.base_price}
            </span>
            <button class="btn btn-primary">Reservar</button>
          </div>
        </div>
      </div>
    ))
  }
</div>
