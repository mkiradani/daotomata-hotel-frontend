/** @jsxImportSource @builder.io/qwik */
import { $, component$, useSignal, useStore, useTask$ } from '@builder.io/qwik';

interface HeroBookingWidgetProps {
  hotelName: string;
  className?: string;
}

export const HeroBookingWidget = component$<HeroBookingWidgetProps>(
  ({ hotelName, className = '' }) => {
    // Form state
    const checkIn = useSignal('');
    const checkOut = useSignal('');
    const adults = useSignal('2');
    const children = useSignal('0');
    const rooms = useSignal('1');

    // Component state
    const state = useStore({
      isLoading: false,
      error: '',
    });

    // Set default dates (Cloudbeds requires startDate > today)
    useTask$(() => {
      const today = new Date();
      const tomorrow = new Date(today);
      tomorrow.setDate(tomorrow.getDate() + 1);
      const dayAfter = new Date(today);
      dayAfter.setDate(dayAfter.getDate() + 2);

      checkIn.value = tomorrow.toISOString().split('T')[0];
      checkOut.value = dayAfter.toISOString().split('T')[0];
    });

    // Search availability and redirect to Cloudbeds
    const searchAvailability = $(async () => {
      if (!checkIn.value || !checkOut.value) {
        state.error = 'Please select check-in and check-out dates';
        return;
      }

      state.isLoading = true;
      state.error = '';

      try {
        console.log('ðŸ”— [HERO-WIDGET] Generating Cloudbeds redirect URL...');

        // Call redirect URL generation API
        const redirectResponse = await fetch('/api/booking/redirect-url', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            checkIn: checkIn.value,
            checkOut: checkOut.value,
            adults: parseInt(adults.value),
            children:
              parseInt(children.value) > 0
                ? parseInt(children.value)
                : undefined,
            rooms: parseInt(rooms.value),
          }),
        });

        const redirectData = await redirectResponse.json();

        console.log('ðŸ”— [HERO-WIDGET] Redirect response:', redirectData);

        if (!redirectData.success || !redirectData.redirectUrl) {
          throw new Error(
            redirectData.error || 'Failed to generate booking URL'
          );
        }

        console.log(
          'ðŸ”— [HERO-WIDGET] Redirecting to:',
          redirectData.redirectUrl
        );

        // Redirect to Cloudbeds
        window.location.href = redirectData.redirectUrl;
      } catch (err) {
        state.error =
          err instanceof Error ? err.message : 'Failed to generate booking URL';
        console.error('ðŸš¨ [HERO-WIDGET] Redirect error:', err);
      } finally {
        state.isLoading = false;
      }
    });

    return (
      <div class={`hero-booking-widget ${className}`}>
        {/* Glass-morphism card with theme-aware styling */}
        <div
          class="bg-base-100/95 shadow-2xl backdrop-blur-md p-8 border-2 border-primary/20"
          style="background: linear-gradient(135deg, transparent, color-mix(in srgb, var(--color-base-100) 85%, transparent)); border-color: color-mix(in srgb, var(--color-primary) 20%, transparent); border-radius: var(--radius-box, 0rem); box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);"
        >
          {/* Header */}
          <div class="mb-8 text-center">
            <div class="inline-flex justify-center items-center bg-primary/10 mb-4 rounded-full w-16 h-16">
              <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
            </div>
            <h3 class="mb-3 font-primary font-bold text-primary text-2xl">
              Book Your Stay
            </h3>
            <p class="mx-auto max-w-sm font-secondary text-base text-base-content/70 leading-relaxed">
              Select your dates and preferences for the perfect stay at {hotelName}
            </p>
          </div>

          {/* Booking Form */}
          <div class="space-y-6">
            {/* Form Grid - All inputs in one line when space allows */}
            <div class="gap-4 grid grid-cols-1 lg:grid-cols-4">
              {/* Check-in Date */}
              <div class="form-control">
                <label class="pb-2 label" for="hero-checkin-date">
                  <span class="font-secondary font-semibold text-sm text-base-content label-text">
                    Check-in Date
                  </span>
                </label>
                <input
                  id="hero-checkin-date"
                  type="date"
                  class="bg-base-100 input-bordered focus:border-primary focus:outline-none focus:ring-2 focus:ring-primary/20 w-full h-12 text-base-content transition-all duration-200 input"
                  style="border-radius: var(--radius-field, 0rem); color: var(--color-base-content); border-width: 2px;"
                  bind:value={checkIn}
                  min={new Date().toISOString().split('T')[0]}
                />
              </div>

              {/* Check-out Date */}
              <div class="form-control">
                <label class="pb-2 label" for="hero-checkout-date">
                  <span class="font-secondary font-semibold text-sm text-base-content label-text">
                    Check-out Date
                  </span>
                </label>
                <input
                  id="hero-checkout-date"
                  type="date"
                  class="bg-base-100 input-bordered focus:border-primary focus:outline-none focus:ring-2 focus:ring-primary/20 w-full h-12 text-base-content transition-all duration-200 input"
                  style="border-radius: var(--radius-field, 0rem); color: var(--color-base-content); border-width: 2px;"
                  bind:value={checkOut}
                  min={checkIn.value || new Date().toISOString().split('T')[0]}
                />
              </div>

              {/* Adults Selection */}
              <div class="form-control">
                <label class="pb-2 label" for="hero-guests">
                  <span class="font-secondary font-semibold text-sm text-base-content label-text">
                    Adults
                  </span>
                </label>
                <select
                  id="hero-guests"
                  class="bg-base-100 focus:border-primary focus:outline-none focus:ring-2 focus:ring-primary/20 w-full h-12 text-base-content transition-all duration-200 select-bordered select"
                  style="border-radius: var(--radius-selector, 0rem); color: var(--color-base-content); border-width: 2px;"
                  bind:value={adults}
                >
                  <option value="1">1 Adult</option>
                  <option value="2">2 Adults</option>
                  <option value="3">3 Adults</option>
                  <option value="4">4 Adults</option>
                  <option value="5">5 Adults</option>
                  <option value="6">6 Adults</option>
                </select>
              </div>

              {/* Children Selection */}
              <div class="form-control">
                <label class="pb-2 label" for="hero-children">
                  <span class="font-secondary font-semibold text-sm text-base-content label-text">
                    Children
                  </span>
                </label>
                <select
                  id="hero-children"
                  class="bg-base-100 focus:border-primary focus:outline-none focus:ring-2 focus:ring-primary/20 w-full h-12 text-base-content transition-all duration-200 select-bordered select"
                  style="border-radius: var(--radius-selector, 0rem); color: var(--color-base-content); border-width: 2px;"
                  bind:value={children}
                >
                  <option value="0">0 Kids</option>
                  <option value="1">1 Kid</option>
                  <option value="2">2 Kids</option>
                  <option value="3">3 Kids</option>
                  <option value="4">4 Kids</option>
                </select>
              </div>
            </div>

            {/* Search Button - Full Width */}
            <div class="pt-2">
              <button
                type="button"
                class={`btn btn-primary btn-lg w-full h-14 ${state.isLoading ? 'loading' : ''} transition-all duration-300 hover:scale-[1.02] hover:shadow-lg font-semibold text-lg`}
                style="border-radius: var(--radius-box, 0rem);"
                onClick$={searchAvailability}
                disabled={
                  state.isLoading || !checkIn.value || !checkOut.value
                }
              >
                  {state.isLoading ? (
                    <div class="flex justify-center items-center">
                      <span class="mr-3 loading loading-spinner loading-md"></span>
                      <span>Finding Available Rooms...</span>
                    </div>
                  ) : (
                    <div class="flex justify-center items-center">
                      <svg
                        class="mr-3 w-6 h-6"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                      >
                        <title>Search icon</title>
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"
                        />
                      </svg>
                      <span>Search Available Rooms</span>
                    </div>
                  )}
                </button>
              </div>
            </div>

            {/* Error Message */}
            {state.error && (
              <div class="alert alert-error">
                <div class="flex items-center">
                  <svg
                    class="flex-shrink-0 mr-2 w-4 h-4 text-error"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <title>Error icon</title>
                    <path
                      fill-rule="evenodd"
                      d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z"
                      clip-rule="evenodd"
                    />
                  </svg>
                  <span class="font-secondary text-error text-sm">
                    {state.error}
                  </span>
                </div>
              </div>
            )}
          </div>
        </div>
      </div>
    );
  }
);
