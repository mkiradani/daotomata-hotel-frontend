---
// Auto-generated Activity Grid Component
const { activities } = Astro.props;
---

<div class="grid grid-cols-1 md:grid-cols-2 gap-6">
  {
    activities.map(activity => (
      <div class="card bg-base-100 shadow-xl">
        <div class="card-body">
          <h3 class="card-title">{activity.name_es}</h3>
          <p>{activity.description_es}</p>
          <div class="flex justify-between items-center">
            <span class="badge badge-secondary">{activity.duration_minutes} min</span>
            <span class="text-xl font-bold text-primary">â‚¬{activity.price}</span>
          </div>
        </div>
      </div>
    ))
  }
</div>
