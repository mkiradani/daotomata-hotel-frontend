---
// Auto-generated Activity Grid Component
const { activities } = Astro.props;
---

<div class="gap-6 grid grid-cols-1 md:grid-cols-2">
  {
    activities.map(activity => (
      <div class="bg-base-100 shadow-xl card">
        <div class="card-body">
          <h3 class="card-title">{activity.name_es}</h3>
          <p>{activity.description_es}</p>
          <div class="flex justify-between items-center">
            <span class="badge badge-secondary">
              {activity.duration_minutes} min
            </span>
            <span class="text-primary/90 text-xl">
              â‚¬{activity.price}
            </span>
          </div>
        </div>
      </div>
    ))
  }
</div>
