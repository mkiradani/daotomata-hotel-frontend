---
import { getMediaUrl } from '../lib/directus.js';

export interface Props {
  hotelName: string;
  hotelDomain: string;
  currentPath?: string;
  themeConfig?: any;
  hotelLogo?: any;
}

const { hotelName, hotelDomain, currentPath = '', themeConfig = {}, hotelLogo = null } = Astro.props;

// Extract subdomain from full domain (e.g., "baberrih" from "baberrih.daotomata.io")
const hotelSubdomain = hotelDomain.split('.')[0];

// Navigation items based on Baberrih's real structure
const navItems = [
  { name: 'Home', href: `/${hotelSubdomain}` },
  { name: 'Accommodation', href: `/${hotelSubdomain}/accommodation` },
  { name: 'Facilities', href: `/${hotelSubdomain}/facilities` },
  { name: 'Experiences', href: `/${hotelSubdomain}/experiences` },
  { name: 'Restaurant', href: `/${hotelSubdomain}/restaurant` },
  { name: 'Contact', href: `/${hotelSubdomain}/contact` }
];

// Extract theme configuration
const colors = themeConfig?.colors || {};
const typography = themeConfig?.typography || {};
const components = themeConfig?.components || {};
const header = components.header || {};
const navigation = components.navigation || {};
---

<nav class="hotel-navbar" id="navbar">
  <div class="navbar-container">
    <!-- Logo/Brand -->
    <div class="navbar-brand">
      <a href={`/${hotelSubdomain}`} class="brand-link">
        {hotelLogo && hotelLogo.id ? (
          <img
            src={getMediaUrl(hotelLogo.id, { height: 40, quality: 90 })}
            alt={hotelLogo.title || hotelName}
            class="brand-logo"
          />
        ) : (
          <span class="brand-text">{hotelName}</span>
        )}
      </a>
    </div>

    <!-- Mobile menu button -->
    <button class="mobile-menu-btn" id="mobile-menu-btn" aria-label="Toggle menu">
      <span class="hamburger-line"></span>
      <span class="hamburger-line"></span>
      <span class="hamburger-line"></span>
    </button>

    <!-- Navigation Links -->
    <div class="navbar-menu" id="navbar-menu">
      <ul class="navbar-nav">
        {navItems.map(item => (
          <li class="nav-item">
            <a
              href={item.href}
              class={`nav-link ${currentPath === item.href ? 'active' : ''}`}
              aria-label={item.name}
            >
              <span class="nav-text">{item.name}</span>
            </a>
          </li>
        ))}
      </ul>

      <!-- CTA Button -->
      <div class="navbar-cta">
        <a href={`/${hotelSubdomain}/book`} class="btn btn-primary">
          Book Now
        </a>
      </div>
    </div>
  </div>
</nav>

<style define:vars={{
  headerBg: header.backgroundColor || colors.background || '#FFFFFF',
  headerText: header.textColor || colors.text || '#2C2416',
  navHover: navigation.hoverColor || colors.primary || '#8B7355',
  primaryColor: colors.primary || '#8B7355',
  secondaryColor: colors.secondary || '#A0956B',
  fontHeading: typography.fontHead || 'Montserrat',
  fontBody: typography.fontBody || 'Montserrat',
  borderColor: colors.primary || '#8B7355'
}}>
  .hotel-navbar {
    background-color: var(--headerBg);
    border-bottom: 1px solid color-mix(in srgb, var(--borderColor) 20%, transparent);
    position: sticky;
    top: 0;
    z-index: 1000;
    transition: all 0.3s ease;
  }

  .navbar-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 1rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 80px;
  }

  .navbar-brand .brand-link {
    text-decoration: none;
    color: var(--headerText);
    font-family: var(--fontHeading), sans-serif;
    font-size: 1.5rem;
    font-weight: 600;
    transition: color 0.3s ease;
  }

  .navbar-brand .brand-link:hover {
    color: var(--navHover);
  }

  .brand-logo {
    height: 40px;
    width: auto;
    object-fit: contain;
    transition: opacity 0.3s ease;
  }

  .brand-logo:hover {
    opacity: 0.8;
  }

  .mobile-menu-btn {
    display: none;
    flex-direction: column;
    background: none;
    border: none;
    cursor: pointer;
    padding: 0.5rem;
    gap: 0.25rem;
  }

  .hamburger-line {
    width: 24px;
    height: 2px;
    background-color: var(--headerText);
    transition: all 0.3s ease;
  }

  .navbar-menu {
    display: flex;
    align-items: center;
    gap: 2rem;
  }

  .navbar-nav {
    display: flex;
    list-style: none;
    margin: 0;
    padding: 0;
    gap: 1.5rem;
    align-items: center;
  }

  .nav-link {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    text-decoration: none;
    color: var(--headerText);
    font-family: var(--fontBody), sans-serif;
    font-weight: 500;
    padding: 0.5rem 1rem;
    border-radius: 8px;
    transition: all 0.3s ease;
    position: relative;
  }

  .nav-link:hover {
    color: var(--navHover);
    background-color: color-mix(in srgb, var(--primaryColor) 10%, transparent);
  }

  .nav-link.active {
    color: var(--primaryColor);
    background-color: color-mix(in srgb, var(--primaryColor) 15%, transparent);
  }

  .nav-icon {
    font-size: 1rem;
  }

  .nav-text {
    font-size: 0.95rem;
  }



  /* Mobile Styles */
  @media (max-width: 768px) {
    .mobile-menu-btn {
      display: flex;
    }

    .navbar-menu {
      position: absolute;
      top: 100%;
      left: 0;
      right: 0;
      background-color: var(--headerBg);
      border-top: 1px solid color-mix(in srgb, var(--borderColor) 20%, transparent);
      flex-direction: column;
      gap: 0;
      padding: 1rem;
      transform: translateY(-100%);
      opacity: 0;
      visibility: hidden;
      transition: all 0.3s ease;
    }

    .navbar-menu.active {
      transform: translateY(0);
      opacity: 1;
      visibility: visible;
    }

    .navbar-nav {
      flex-direction: column;
      width: 100%;
      gap: 0;
    }

    .nav-item {
      width: 100%;
    }

    .nav-link {
      width: 100%;
      justify-content: flex-start;
      padding: 1rem;
      border-radius: 0;
      border-bottom: 1px solid color-mix(in srgb, var(--borderColor) 20%, transparent);
    }

    .navbar-cta {
      width: 100%;
      margin-top: 1rem;
    }

    .navbar-cta .btn {
      width: 100%;
    }
  }

  /* Scroll effect */
  .hotel-navbar.scrolled {
    background-color: color-mix(in srgb, var(--headerBg) 95%, transparent);
    backdrop-filter: blur(10px);
    box-shadow: 0 2px 20px color-mix(in srgb, var(--primaryColor) 10%, transparent);
  }
</style>

<script>
  // Mobile menu toggle
  const mobileMenuBtn = document.getElementById('mobile-menu-btn');
  const navbarMenu = document.getElementById('navbar-menu');
  
  if (mobileMenuBtn && navbarMenu) {
    mobileMenuBtn.addEventListener('click', () => {
      navbarMenu.classList.toggle('active');
    });
  }

  // Scroll effect
  const navbar = document.getElementById('navbar');
  if (navbar) {
    window.addEventListener('scroll', () => {
      if (window.scrollY > 50) {
        navbar.classList.add('scrolled');
      } else {
        navbar.classList.remove('scrolled');
      }
    });
  }

  // Close mobile menu when clicking outside
  document.addEventListener('click', (e) => {
    if (navbarMenu && !navbar?.contains(e.target as Node)) {
      navbarMenu.classList.remove('active');
    }
  });
</script>
