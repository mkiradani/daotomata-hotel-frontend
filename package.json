{
  "name": "@daotomata/web",
  "version": "1.8.0-dev",
  "description": "Astro frontend with Qwik islands for hotel websites",
  "type": "module",
  "scripts": {
    "dev": "pnpm run generate:themes && astro dev",
    "build": "pnpm run generate:themes && astro build",
    "preview": "astro preview",
    "test": "vitest",
    "test:e2e": "playwright test",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx,.astro",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx,.astro --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "clean": "rm -rf dist .astro src/generated",
    "astro": "astro",
    "prepare": "husky",
    "generate:themes": "node scripts/generate-themes.js"
  },
  "dependencies": {
    "@astrojs/node": "^9.3.0",
    "@astrojs/vercel": "^5.0.0",
    "@builder.io/qwik": "^1.14.1",
    "@directus/sdk": "^17.0.0",
    "@qwikdev/astro": "^0.8.0",
    "@tailwindcss/postcss": "^4.1.10",
    "@tailwindcss/vite": "^4.1.10",
    "astro": "5.10.0",
    "daisyui": "5.0.4",
    "node-fetch": "^3.3.2",
    "ofetch": "^1.4.1",
    "ws": "^8.18.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@astrojs/tailwind": "^5.1.5",
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.35.1",
    "@typescript-eslint/parser": "^8.35.1",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-astro": "^1.3.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "prettier-plugin-astro": "^0.14.1",
    "tailwindcss": "4.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  }
}
